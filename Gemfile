# Gemfile

source 'https://rubygems.org'

ruby '3.0.2' # 사용 중인 Ruby 버전 명시 (선택사항)

# 마스토돈 API
gem 'mastodon-api', require: 'mastodon'

# Google Drive API 연동
gem 'google_drive'

# 환경변수 로딩
gem 'dotenv'

# 루비에서 스케줄링 작업
gem 'rufus-scheduler'

# JSON 처리 (표준라이브러리지만 명시 가능)
gem 'json', '~> 2.7'

# 날짜/시간 확장 (필요 시)
gem 'activesupport', require: 'active_support/all'
