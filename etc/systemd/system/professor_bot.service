[Unit]
Description=Mastodon Professor Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/mastodon_bots/professor_bot
EnvironmentFile=/root/mastodon_bots/professor_bot/.env
ExecStart=/usr/bin/bash -lc 'bundle exec ruby main.rb'
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
